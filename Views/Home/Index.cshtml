@model IEnumerable<TodoApp.Models.Todo>

@{
    ViewData["Title"] = "Todo List";
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        No todos found. <a asp-controller="Todo" asp-action="Create">Create a new todo</a>.
    </div>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Task</th>
                    <th>Completed</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var todo in Model)
                {
                    <tr>
                        <td>@todo.Task</td>
                        <td>@(todo.IsCompleted ? "Yes" : "No")</td>
                        <td>@todo.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@todo.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@todo.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="text-center mt-4">
    <a class="btn btn-success" asp-action="Create">Create New Todo</a>
</div>
